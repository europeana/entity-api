<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
		http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans.xsd
	">


<!-- Solr connection configuration using LB SolrClient --> 
	<bean id="entity_solr_client_clientbuilderBean"
		class="org.apache.solr.client.solrj.impl.LBHttpSolrClient.Builder" />

	<bean id="entity_solr_client_clientBuilder"
		class="org.apache.solr.client.solrj.impl.LBHttpSolrClient.Builder"
		factory-bean="entity_solr_client_clientbuilderBean"
		factory-method="withBaseSolrUrls">
		<constructor-arg
			value="#{entityProperties['solr.entity.url'].split(',')}" />
	</bean>

	<bean id="entity_solr_server"
		class="org.apache.solr.client.solrj.SolrClient"
		factory-bean="entity_solr_client_clientBuilder" factory-method="build">
		<property name="connectionTimeout"
			value="#{entityProperties['solr.entity.timeout']}" />
	</bean>

</beans>